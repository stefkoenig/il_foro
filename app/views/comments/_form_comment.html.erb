<div class="container sign_up">
    <div class="row">
        <div class='col-md-3'></div>
            <div class="col-md-6">
                <div class="login-box well">
                    <%= form_for [@post, @comment] do |f| %>
                    <div class="form-group">
                        <%= f.text_area :body, placeholder: "Insert new comment here...", class: "form-control" %>
                    </div>
                    <div class="actions">
                        <%= f.submit class: "btn btn-default btn-login-submit btn-block m-t-md" %>
                </div>
            </div>
        </div>
    </div>
<% end %>
