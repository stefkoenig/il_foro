<div class="container sign_up">
    <div class="row">
        <div class='col-md-3'></div>
            <div class="col-md-6">
                <div class="login-box well">
                    <%= form_tag sessions_path do %>
                        <legend>Log In</legend>
                      <div class="form-group">
                          <label for="email">E-mail</label>
                          <%= text_field_tag :email,nil, placeholder: "E-mail", id: "email", class: "form-control"%>
                      </div>
                      <div class="form-group">
                          <label for="Password">Password</label>
                          <%= password_field_tag :password, nil, placeholder: "Password", id: "password", class: "form-control" %>
                      </div>
                      <div class="actions">
                          <%= submit_tag "Log in", class: "btn btn-primary btn-login-submit btn-block m-t-md" %>
                      </div>
                      <div class="form-group">
                          <p class="text-center m-t-xs text-sm">Do not have an account?</p>
                          <a href="/users/new/" class="btn btn-default btn-block m-t-md">Sign Up!</a>
                      </div>
                  </div>
              </div>
          </div>
      </div>
<% end %>
