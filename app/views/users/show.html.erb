<div class="container">
    <div class="page-header profile">
        <h1><%=@user.username %></h1>
        <% if current_user %>
            <% if @user.id == current_user.id %>
                <ul class="list-inline list-unstyled">
                    <li><span><%= link_to 'Update User Info', edit_user_path(@user) %></span></li>
                    <li>|</li>
                    <li><span><%= link_to 'Delete Account', @user, method: :delete %></span></li>
                </ul>
            <% end %>
        <% end %>
    </div>

    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css"/>

    <h3>Posts:</h3>
    <% @user.posts.each do |p| %>
        <div class="posts">
            <div class="well">
                <div class="media">

                    <!-- <a class="pull-left" href="#">
                    <img class="media-object" src="http://placekitten.com/150/150">
                    </a> -->
                    <div class="media-body">
                        <h4 class="media-heading"><%= p.title %></h4>
                        <% if p.user %>
                            <p class="text-right"><%= link_to "#{p.user.username}", user_path(p.user) %></p>
                        <% end %>
                            <p><%= p.body %></p>
                            <ul class="list-inline list-unstyled">
                                <li>
                                    <span><i class= "glyphicon glyphicon-comment"></i><%= link_to " #{p.comments.count} Comments", post_path(p) %></span>
                                </li>
                                <li>|</li>
	                            <li><span><i class="glyphicon glyphicon-calendar"></i> <%= time_ago_in_words(p.created_at) %> ago</span></li>
                            </ul>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
